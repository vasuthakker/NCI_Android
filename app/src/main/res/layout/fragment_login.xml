<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <Button
        android:visibility="gone"
        android:id="@+id/btnlogg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/log_in"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_easypay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/forgot_pin_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_pin"
        android:textSize="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/enterpin"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/enterpin"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="0dp" />


    <com.goodiebag.pinview.Pinview
        android:id="@+id/enterpin"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:pinWidth="60dp"
        app:pinHeight="60dp"
        app:pinLength="4"
        app:cursorVisible="true"
        app:forceKeyboard="false"

        app:inputType="number"
        app:password="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.45"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/registerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/enterpin"
        android:textSize="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/enterpin"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/EnterPinET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_a_four_digit_pin"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/enterpin"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"/>


</android.support.constraint.ConstraintLayout>