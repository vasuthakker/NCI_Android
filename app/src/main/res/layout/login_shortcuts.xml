<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6f2fa">

    <ImageView
        android:id="@+id/ls_Img_about"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_about"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ls_text_about"
        android:padding="10dp"
        android:background="@drawable/bg_about_us"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ls_img_faq"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:background="@drawable/bg_faqs"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toRightOf="@+id/ls_Img_about"
        app:layout_constraintRight_toLeftOf="@+id/ls_img_tour"
        app:srcCompat="@drawable/ic_faq"
        app:layout_constraintBottom_toBottomOf="@+id/ls_Img_about"
        app:layout_constraintTop_toTopOf="@+id/ls_Img_about"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/ls_img_tour"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_tour"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="@+id/ls_Img_about"
        android:padding="10dp"
        android:background="@drawable/bg_tour"
        app:layout_constraintTop_toTopOf="@+id/ls_Img_about"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/ls_img_contact_us"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toRightOf="@+id/ls_img_tour"
        app:srcCompat="@drawable/ic_contactus"
        app:layout_constraintRight_toLeftOf="@+id/ls_img_offers"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintBottom_toBottomOf="@+id/ls_Img_about"
        android:padding="10dp"
        android:background="@drawable/bg_contact_us"
        app:layout_constraintTop_toTopOf="@+id/ls_Img_about"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/ls_img_offers"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_offers"
        app:layout_constraintBottom_toBottomOf="@+id/ls_Img_about"
        android:padding="10dp"
        android:background="@drawable/bg_offers"
        app:layout_constraintTop_toTopOf="@+id/ls_Img_about"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/ls_text_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"
        android:text="@string/ls_tv_about_us"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/ls_Img_about"
        app:layout_constraintRight_toRightOf="@+id/ls_Img_about"
         />

    <TextView
        android:id="@+id/ls_text_faq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@android:color/black"
        android:text="@string/ls_tv_faqs"
        app:layout_constraintLeft_toLeftOf="@+id/ls_img_faq"
        app:layout_constraintRight_toRightOf="@+id/ls_img_faq"
        app:layout_constraintBottom_toBottomOf="@+id/ls_text_about"
        />

    <TextView
        android:id="@+id/ls_text_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:textColor="@android:color/black"
        android:text="@string/ls_tv_app_tour"
        app:layout_constraintLeft_toLeftOf="@+id/ls_img_tour"
        app:layout_constraintRight_toRightOf="@+id/ls_img_tour"
        app:layout_constraintBottom_toBottomOf="@+id/ls_text_about"
        />

    <TextView
        android:id="@+id/ls_text_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"

        android:textColor="@android:color/black"
        android:text="@string/ls_tv_contact"
        app:layout_constraintLeft_toLeftOf="@+id/ls_img_contact_us"
        app:layout_constraintRight_toRightOf="@+id/ls_img_contact_us"
        app:layout_constraintBottom_toBottomOf="@+id/ls_text_about"
         />

    <TextView
        android:id="@+id/ls_text_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:textColor="@android:color/black"
        android:text="@string/ls_tv_offers"

        app:layout_constraintLeft_toLeftOf="@+id/ls_img_offers"
        app:layout_constraintRight_toRightOf="@+id/ls_img_offers"
        app:layout_constraintBottom_toBottomOf="@+id/ls_text_about"

         />
</android.support.constraint.ConstraintLayout>